<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.verra.frc3512scouting.Teleop">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:layout_gravity="center_horizontal" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Teleop"
                    android:id="@+id/teleop_header"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Teleop - Coopertition"
                    android:id="@+id/textView5"
                    android:layout_gravity="center_horizontal" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="39dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="# of Totes placed on Step"
                    android:id="@+id/textView9"
                    android:layout_gravity="center_horizontal" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal" >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/teleop_tote_0"
                        android:checked="true"
                        android:padding="15dp"
                        android:onClick="onBinsMovedFromStepRadioClicked" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:id="@+id/teleop_tote_1"
                        android:checked="false"
                        android:padding="15dp"
                        android:onClick="onBinsMovedFromStepRadioClicked" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:id="@+id/teleop_tote_2"
                        android:checked="false"
                        android:padding="15dp"
                        android:onClick="onBinsMovedFromStepRadioClicked" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:id="@+id/teleop_tote_3"
                        android:checked="false"
                        android:padding="15dp"
                        android:onClick="onBinsMovedFromStepRadioClicked" />

                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Stacked on top of how many Totes"
                    android:id="@+id/textView10"
                    android:layout_gravity="center_horizontal" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal" >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/ontop_0"
                        android:checked="true"
                        android:padding="15dp"
                        android:onClick="onBinsMovedFromStepRadioClicked" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:id="@+id/ontop_1"
                        android:checked="false"
                        android:padding="15dp"
                        android:onClick="onBinsMovedFromStepRadioClicked" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:id="@+id/ontop_2"
                        android:checked="false"
                        android:padding="15dp"
                        android:onClick="onBinsMovedFromStepRadioClicked" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:id="@+id/ontop_3"
                        android:checked="false"
                        android:padding="15dp"
                        android:onClick="onBinsMovedFromStepRadioClicked" />
                </RadioGroup>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="55dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Teleop - Stacked Grey Tote Sets"
                    android:id="@+id/textView11"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
