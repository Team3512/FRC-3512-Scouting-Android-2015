<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.verra.frc3512scouting.Teleop">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Teleop"
                    android:id="@+id/teleop_header"
                    android:layout_gravity="center_horizontal"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Teleop - Coopertition"
                    android:id="@+id/textView5"
                    android:layout_gravity="center_horizontal" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="39dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="# of Totes placed on Step"
                    android:id="@+id/textView9"
                    android:layout_gravity="center_horizontal" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal" >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/teleop_tote_0"
                        android:checked="true"
                        android:padding="15dp"
                        android:onClick="onTotesStepRadioClicked" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:id="@+id/teleop_tote_1"
                        android:checked="false"
                        android:padding="15dp"
                        android:onClick="onTotesStepRadioClicked" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:id="@+id/teleop_tote_2"
                        android:checked="false"
                        android:padding="15dp"
                        android:onClick="onTotesStepRadioClicked" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:id="@+id/teleop_tote_3"
                        android:checked="false"
                        android:padding="15dp"
                        android:onClick="onTotesStepRadioClicked" />

                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Stacked on top of how many Totes"
                    android:id="@+id/textView10"
                    android:layout_gravity="center_horizontal" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal" >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/ontop_0"
                        android:checked="true"
                        android:padding="15dp"
                        android:onClick="onStackedTopRadioClicked" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:id="@+id/ontop_1"
                        android:checked="false"
                        android:padding="15dp"
                        android:onClick="onStackedTopRadioClicked" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:id="@+id/ontop_2"
                        android:checked="false"
                        android:padding="15dp"
                        android:onClick="onStackedTopRadioClicked" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:id="@+id/ontop_3"
                        android:checked="false"
                        android:padding="15dp"
                        android:onClick="onStackedTopRadioClicked" />
                </RadioGroup>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="36dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Teleop - Stacked Grey Tote Sets"
                    android:id="@+id/textView11"
                    android:layout_gravity="center_horizontal" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="             1st          2nd          3rd          4th          5th"
                        android:id="@+id/textView19" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Litter"
                            android:id="@+id/textView12"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Can"
                            android:id="@+id/textView13"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Totes"
                            android:id="@+id/textView14"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/litter_1"
                            android:checked="false"
                            android:layout_marginLeft="8dp" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/can_1"
                            android:checked="false"
                            android:layout_marginLeft="8dp" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/totes_1"
                            android:spinnerMode="dropdown"
                            android:layout_marginLeft="8dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" >

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/litter_2"
                            android:checked="false"
                            android:layout_marginLeft="18dp" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/can_2"
                            android:checked="false"
                            android:layout_marginLeft="18dp" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/totes_2"
                            android:spinnerMode="dropdown"
                            android:layout_marginLeft="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" >

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/litter_3"
                            android:checked="false"
                            android:layout_marginLeft="26dp" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/can_3"
                            android:checked="false"
                            android:layout_marginLeft="26dp" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/totes_3"
                            android:spinnerMode="dropdown"
                            android:layout_marginLeft="26dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" >

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/litter_4"
                            android:checked="false"
                            android:layout_marginLeft="27dp" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/can_4"
                            android:checked="false"
                            android:layout_marginLeft="27dp" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/totes_4"
                            android:spinnerMode="dropdown"
                            android:layout_marginLeft="27dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" >

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/litter_5"
                            android:checked="false"
                            android:layout_marginLeft="22dp" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/can_5"
                            android:checked="false"
                            android:layout_marginLeft="22dp" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/totes_5"
                            android:spinnerMode="dropdown"
                            android:layout_marginLeft="22dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
